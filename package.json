{
  "name": "site-scanner-analyzer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --workspace=server",
    "client": "npm run dev --workspace=client",
    "build": "npm install && npm run build -w shared && npm run build -w client && npm run build -w server",
    "start": "node server/dist/index.js",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:studio": "npm run db:studio --workspace=server"
  },
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "engines": {
    "node": "24"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
